{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body mt-4">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/nova" method="POST">
            <input type="hidden" value="{{usuarioLogado.nome}}" name="usuario">
            <label for="conteudo">Conte√∫do:</label>
            <textarea name="conteudo" class="form-control" required></textarea>
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select mt-4">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria cadastrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Postar</button>
            <a href="/admin/postagens"><button type="button" class="btn btn-success mt-4">Voltar as postagens</button></a>

        </form>
    </div>
</div>